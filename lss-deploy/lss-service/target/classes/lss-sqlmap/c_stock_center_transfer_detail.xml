<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="CStockCenterTransferDetail">

	<sql id="tableName" >
		c_stock_center_transfer_detail
	</sql>
	
	<sql id="selectColumns">
	select
	t.id id ,
	t.tsf_serialno tsfSerialno ,
	t.materialcode materialcode ,
	t.total_m totalM ,
	t.total_s totalS ,
	t.total_t totalT ,
	t.unit unit ,
	bt.typeId typeId,
    bt.name fname, 
    b.covert_ratio covertratio, 
    b.convert_flag convertFlag,
    bt.account_flag accountflag,
	b.name name,
	FORMAT(t.total_s * b.covert_ratio,2) subtotal
		    FROM 
    <include refid="tableName"/> t
    left join b_material_info b on t.materialcode=b.code
    left join b_material_type bt on b.typeId=bt.typeId
  	</sql>
  	
  	<!-- 添加 -->
	<insert id="create" parameterType="com.lq.lss.model.CStockCenterTransferDetail" useGeneratedKeys="true"  keyProperty="id">
		INSERT INTO <include refid="tableName"/> 
		(id,tsf_serialno,materialcode,total_m,total_s,total_t,unit)
		VALUES
		(#{id} ,#{tsfSerialno} ,#{materialcode} ,#{totalM} ,#{totalS} ,#{totalT} ,#{unit} )
	</insert>
	
	<!-- 批量 添加 -->
	<insert id="create_BATCH"  parameterType="List" >
		INSERT INTO <include refid="tableName"/> 
		(id,tsf_serialno,materialcode,total_m,total_s,total_t,unit)
		VALUES 
		<foreach collection="list" item="item" index="index" separator=",">
			(#{item.id} ,#{item.tsfSerialno} ,#{item.materialcode} ,#{item.totalM} ,#{item.totalS} ,#{item.totalT} ,#{item.unit} )
		</foreach>
	</insert>
	
	<delete id="deleteById" parameterType="java.lang.String">
		DELETE FROM 
		<include refid="tableName"/> 
		WHERE tsf_serialno = #{tsfSerialno}
  	</delete>
	
	<select id="loadAll" resultType="com.lq.lss.model.CStockCenterTransferDetail">
		<include refid="selectColumns" />
	</select>
	
	<select id="findById" resultType="com.lq.lss.model.CStockCenterTransferDetail" 
	parameterType="java.lang.String">
		<include refid="selectColumns"/>   
		where id = #{id}
	</select>
	
	<sql id="pageConditions">
		WHERE 1=1
  	<if test="id != '' and id != null">AND id = #{id}</if>
  	<if test="tsfSerialno != '' and tsfSerialno != null">AND tsf_serialno = #{tsfSerialno}</if>
  	<if test="materialcode != '' and materialcode != null">AND materialcode = #{materialcode}</if>
  	<if test="totalM != null">AND total_m = #{totalM}</if>
  	<if test="totalS != null">AND total_s = #{totalS}</if>
  	<if test="totalT != null">AND total_t = #{totalT}</if>
  	<if test="unit != '' and unit != null">AND unit = #{unit}</if>
	</sql>
	
	<!-- 分页查询 -->
	<select id="findPage" resultType="com.lq.lss.model.CStockCenterTransferDetail"
		parameterType="com.lq.lss.model.CStockCenterTransferDetail">
		<include refid="selectColumns"/> 
		<include refid="pageConditions"/>
		<if test="orderStr != '' and orderStr != null">
				order by ${orderStr}
		</if>
	</select>
	
	<select id="findPage_COUNT" resultType="int">
		select count(1) from
		<include refid="tableName" />
		<include refid="pageConditions" />
	</select>
	
	<sql id="update_sql">
		UPDATE 
		<include refid="tableName"/> 
		<set>
		  	<if test="tsfSerialno != null">tsf_serialno = #{tsfSerialno},</if>
		  	<if test="materialcode != null">materialcode = #{materialcode},</if>
		  	<if test="totalM != null">total_m = #{totalM},</if>
		  	<if test="totalS != null">total_s = #{totalS},</if>
		  	<if test="totalT != null">total_t = #{totalT},</if>
		  	<if test="unit != null">unit = #{unit}</if>
			</set>
		WHERE id = #{id}
	</sql>
		
	<update id="update" parameterType="com.lq.lss.model.CStockCenterTransferDetail">
		<include refid="update_sql"/>
	</update>	
		
	<select id="findBytsfSerialno" parameterType="java.lang.String" resultType="com.lq.lss.model.CStockCenterTransferDetail">
		<include refid="selectColumns"/>   
		WHERE tsf_serialno = #{tsfSerialno}
		ORDER BY b.typeId,b.position desc
  	</select>

</mapper>